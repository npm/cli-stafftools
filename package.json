{
  "name": "@npmcli/stafftools",
  "version": "2.0.2",
  "description": "The npm CLI Team's Internal Tools",
  "main": "./lib/index.js",
  "bin": {
    "stafftools": "./bin/stafftools.mjs",
    "gh": "./bin/gh.mjs"
  },
  "scripts": {
    "test": "tap",
    "lint": "eslint \"**/*.js\"",
    "postlint": "template-oss-check",
    "template-oss-apply": "template-oss-apply --force",
    "lintfix": "npm run lint -- --fix",
    "snap": "tap",
    "posttest": "npm run lint",
    "postinstall": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/npm/stafftools.git"
  },
  "keywords": [],
  "author": "GitHub Inc.",
  "license": "ISC",
  "dependencies": {
    "@supercharge/promise-pool": "^2.1.0",
    "chalk": "^5.0.1",
    "graphql-tag": "^2.12.6",
    "just-deep-map-values": "^1.0.0",
    "lodash-es": "^4.17.21",
    "patch-package": "^6.4.7",
    "relaxed-json": "^1.0.3",
    "semver": "^7.3.7",
    "serialize-error": "^11.0.0",
    "single-line-log": "^1.1.2",
    "string-width": "^5.1.2",
    "which": "^2.0.2",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@npmcli/eslint-config": "^3.0.1",
    "@npmcli/template-oss": "4.4.4",
    "prettier": "^2.6.2",
    "tap": "^16.0.1"
  },
  "files": [
    "bin/",
    "lib/",
    "patches/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "tap": {
    "no-coverage": true,
    "node-arg": [
      "--require=./node_modules/patch-package/dist/index.js"
    ],
    "timeout": 600,
    "nyc-arg": [
      "--exclude",
      "tap-snapshots/**"
    ]
  },
  "templateOSS": {
    "//@npmcli/template-oss": "This file is partially managed by @npmcli/template-oss. Edits may be overwritten.",
    "version": "4.4.4",
    "ciVersions": "latest",
    "distPaths": [
      "patches/"
    ],
    "allowPaths": [
      "patches/"
    ]
  }
}
