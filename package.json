{
  "name": "@npmcli/stafftools",
  "version": "2.3.1",
  "description": "The npm CLI Team's Internal Tools",
  "main": "./lib/index.js",
  "bin": {
    "stafftools": "./bin/stafftools.mjs",
    "gh": "./bin/gh.mjs"
  },
  "scripts": {
    "test": "tap",
    "lint": "eslint \"**/*.js\"",
    "postlint": "template-oss-check",
    "template-oss-apply": "template-oss-apply --force",
    "lintfix": "npm run lint -- --fix",
    "snap": "tap",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/npm/stafftools.git"
  },
  "keywords": [],
  "author": "GitHub Inc.",
  "license": "ISC",
  "dependencies": {
    "@supercharge/promise-pool": "^3.0.0",
    "chalk": "^5.0.1",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "just-deep-map-values": "^1.0.0",
    "libsodium-wrappers": "^0.7.11",
    "lodash-es": "^4.17.21",
    "minimatch": "^9.0.3",
    "relaxed-json": "^1.0.3",
    "semver": "^7.3.7",
    "serialize-error": "^11.0.0",
    "single-line-log": "^1.1.2",
    "string-width": "^6.1.0",
    "which": "^3.0.0",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@npmcli/eslint-config": "^4.0.0",
    "@npmcli/template-oss": "4.18.0",
    "prettier": "^3.0.0",
    "tap": "^16.0.1"
  },
  "files": [
    "bin/",
    "lib/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "tap": {
    "no-coverage": true,
    "timeout": 600,
    "nyc-arg": [
      "--exclude",
      "tap-snapshots/**"
    ]
  },
  "templateOSS": {
    "//@npmcli/template-oss": "This file is partially managed by @npmcli/template-oss. Edits may be overwritten.",
    "version": "4.18.0",
    "ciVersions": "latest",
    "publish": true,
    "rootRepo": {
      "add": {
        ".github/settings.yml": false
      }
    }
  }
}
